---
import { formatDateToYYYYMMDD } from "../utils/date-utils";

interface Props {
    title: string;
    pubDate: Date;
    description: string;
    slug: string;
}

const { title, pubDate, description, slug } = Astro.props;
---

<div class="flex flex-col gap-1">
    <div>
        <a href={`/posts/${slug}`} class="text-xl font-bold link">{title}</a>
    </div>
    <div class="flex gap-4 text-sm text-gray-400">
        <span>发布于 {formatDateToYYYYMMDD(pubDate)}</span>
        <span>
            <a href="/" class="link">#标签</a>
        </span>
    </div>
    <div class="text-lg">
        {description}
    </div>
</div>
