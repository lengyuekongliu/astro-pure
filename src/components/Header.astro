<header class="container" transition:persist>
    <div class="navigation">
        <a href="/" class="navigation-title">KongLiu's Blog</a>
        <nav id="menu" class="menu flex flex-col">
            <button id="menu-button" class="menu-button self-end">
                <i class="iconify text-3xl mdi--menu"></i>
                <i class="iconify text-3xl mdi--close"></i>
            </button>
            <ul id="menu-list" class="hidden gap-4 pt-4 text-center md:flex md:self-end md:pt-0">
                <li>
                    <a href="/" class="link">主页</a>
                </li>
                <li>
                    <a href="/archive" class="link">归档</a>
                </li>
                <li>
                    <a href="/tags" class="link">标签</a>
                </li>
                <li>
                    <a href="/about" class="link">关于</a>
                </li>
                <li>
                    <a href="/search" class="link">搜索</a>
                </li>
                <!-- <li>
                    <a href="/rss.xml" target="_blank" class="hover:underline underline-offset-2">RSS</a>
                </li> -->
            </ul>
        </nav>
    </div>
</header>

<script>

function loadButtonScript() {
    document.getElementById('menu-button')?.addEventListener('click', () => {
        document.getElementById('menu')?.classList.toggle('active')
        document.getElementById('menu-list')?.classList.toggle('hidden')
    })
}

function init() {
    loadButtonScript()
}

init()

</script>

<style>
.navigation {
    @apply p-4 md:py-8;
}

.navigation .menu-button {
    @apply flex items-center md:hidden;
}

.navigation .menu {
    line-height: 30px;
}

.navigation .navigation-title {
    background: -webkit-linear-gradient(45deg, #e5b751, #1677b3, #cc5595 80%);
    background-clip: text;
    -webkit-text-fill-color: transparent;
    font-size: 1.25rem;
    font-weight: bold;
    position: absolute;
    line-height: 30px;
}

.menu .mdi--close {
    display: none;
}

.menu.active .mdi--close {
    display: inline;
}

.menu.active .mdi--menu {
    display: none;
}
</style>