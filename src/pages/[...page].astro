---
import Layout from "../layouts/MainLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION, PAGE_SIZE } from '../consts';
import { getSortedPosts } from "../utils/content-utils";
import PostPage from "../components/PostPage.astro";

export async function getStaticPaths({ paginate }: any) {
    const allBlogPosts = await getSortedPosts();
    return paginate(allBlogPosts, { pageSize: PAGE_SIZE });
}

const { page }: any = Astro.props;
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
    <div class="h-full flex flex-col">
        <PostPage page={page} />
        <div class="text-lg flex items-center justify-center pt-8 mt-auto">
            { page.url.prev ? <a href={page.url.prev} class="link select-none">上一页</a> : <span class="text-gray-400 select-none">上一页</span> }
            <span class="px-4">{page.currentPage}/{page.lastPage}</span>
            { page.url.next ? <a href={page.url.next} class="link select-none">下一页</a> : <span class="text-gray-400 select-none">下一页</span> } 
           
        </div>
    </div>
</Layout>

