---
import Layout from "../layouts/MainLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION, PAGE_SIZE } from '../consts';
import { getSortedPosts } from "../utils/content-utils";
import PostPage from "../components/PostPage.astro";

export async function getStaticPaths({ paginate }: any) {
    const allBlogPosts = await getSortedPosts();
    return paginate(allBlogPosts, { pageSize: PAGE_SIZE });
}

const { page }: any = Astro.props;
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
    <div class="h-full flex flex-col">
        <PostPage page={page} />
        <div class="text-lg flex items-center justify-center pt-8 mt-auto">
            { page.url.prev ? <a href={page.url.prev} class="link cursor-pointer"><i class="flex iconify text-xl mdi--arrow-left"></i></a> : <span class="text-gray-400"><i class="flex iconify text-xl mdi--arrow-left"></i></span> }
            <span class="px-6">{page.currentPage}/{page.lastPage}</span>
            { page.url.next ? <a href={page.url.next} class="link cursor-pointer"><i class="flex iconify text-xl mdi--arrow-right"></i></a> : <span class="text-gray-400"><i class="flex iconify text-xl mdi--arrow-right"></i></span> } 
        </div>
    </div>
</Layout>

